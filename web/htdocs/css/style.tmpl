    border: 1px solid #dda;
    border-collapse: collapse;
    margin-bottom: 1em;
    padding: 0.3em;
}
$shrink("div.notes")

div.notes h2 {
    margin: 0;
    padding: 0;
    background: #dda;
    font-size: 100%;
    width: 100%;
}

div.notes input, div.notes textarea {
    font-size: 80%;
    font-family: sans-serif;
}

div.notes form h3 {
    font-size: 100%;
}

div.notes label {
    display: block;
    font-size: 80%;
}

div.note {
    border-bottom: 1px dashed #dda;
}

