##
## Makefile for Cereweb/lib/
##

SHELL = @SHELL@
INSTALL = @INSTALL@
CHEETAH = @CHEETAH@

prefix = @prefix@
libdir = @libdir@
pythondir = @PYTHONDIR@/Cereweb

sources = $(wildcard *.py cereweb.conf*)

.PHONY: all install install-lib clean distclean print

all: 
	$(MAKE) -C templates $@

print:
	@echo Sources
	@echo $(sources)
	@echo --
	@echo Going to $(templatedir)

install: install-lib
	$(MAKE) -C templates $@

install-lib: $(sources)
	$(INSTALL) -d $(DESTDIR)/$(pythondir)
	$(INSTALL) -v -m 644 $(sources) $(DESTDIR)/$(pythondir)
	touch $(DESTDIR)/$(pythondir)/__init__.py
	chmod 644 $(DESTDIR)/$(pythondir)/__init__.py

clean:
	rm -f *~ 
	$(MAKE) -C templates $@

distclean: clean
	rm -f Makefile
	$(MAKE) -C templates $@
